{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "sql:default",
    {
      "identifier": "sql:allow-load",
      "allow": [
        {
          "name": "sqlite:sales.db"
        }
      ]
    },
    {
      "identifier": "sql:allow-execute",
      "allow": [
        {
          "name": "sqlite:sales.db"
        }
      ]
    },
    "shell:allow-open"
  ]
}